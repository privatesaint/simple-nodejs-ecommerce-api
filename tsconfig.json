{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"pretty": true,
    
    "skipLibCheck": true,
		"esModuleInterop": true,
		"sourceMap": false,
		"outDir": "./dist",
		"lib": [
			"ES2015",
			"DOM"
		],
		"target": "es2018",
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"test/**/*.ts"
	]
}